<div class="col s12 m6 l4">
    <div class="card primary-gradient card-hover">

        <div class="card-content">
            <p class="flow-text left-align white-text">{{ title }}</p>
        </div>

        <div class="card-action">
            <a class="waves-effect waves-light btn danger-gradient white-text" href="{{ link }}"
                target="_blank">View Article</a>
            <a class="waves-effect waves-light btn danger-gradient white-text view-article modal-trigger"
                href="#modal_{{_id}}" data-id="{{ _id }}">Notes</a>
            {{#if saved }}
                <a class="waves-effect waves-light btn warning-gradient white-text unsave-article"
                    data-id="{{ _id }}">Remove Article</a>
            {{else}}
                <a class="waves-effect waves-light btn success-gradient white-text save-article"
                    data-id="{{ _id }}">Save Article</a>
            {{/if}}
        </div>
    </div>
</div>

