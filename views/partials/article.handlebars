<div class="col s12 m6 l4 xl2">
    <div class="card primary-gradient card-hover">
        <div class="card-content">
            <span class="card-title">{{ title }}</span>
            <p>{{ blurb }}</p>
        </div>
        <div class="card-action">
            {{#if saved }}
                <a class="waves-effect waves-light btn" data-id="{{ _id }}">Notes</a>
            {{else}}
                <a class="waves-effect waves-light btn" data-id="{{ _id }}">Save Article</a>
            {{/if}}
            
            <a class="waves-effect waves-light btn" href="{{ link }}">Read Article</a>
        </div>
    </div>
</div>